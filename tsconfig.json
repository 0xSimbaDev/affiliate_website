{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "references": [
    { "path": "apps/web" },
    { "path": "apps/admin" },
    { "path": "packages/types" },
    { "path": "packages/database" },
    { "path": "packages/utils" },
    { "path": "packages/api" },
    { "path": "packages/ui" },
    { "path": "packages/layouts" }
  ],
  "include": [],
  "exclude": ["node_modules", "apps", "packages"]
}
